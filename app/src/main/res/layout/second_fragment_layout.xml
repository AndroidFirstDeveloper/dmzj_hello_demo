<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/second_fragment_layout_tv"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        android:background="@android:drawable/list_selector_background"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/second_fragment_layout_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp" />


    <Button
        android:id="@+id/second_fragment_layout_btn2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        android:text="ViewPager Activity"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/second_fragment_layout_check_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        android:text="验证 配置变化时，Fragment实例是否被销毁"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

   <!-- <Button
        android:id="@+id/second_fragment_layout_remove_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        android:text="remove fragment"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp" />-->
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".zoomtest.EffectImageViewActivity">

    <com.example.myapplication.zoomtest.EffectImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="matrix"
        android:src="@drawable/dmzj_image0" />

    <TextView
        android:id="@+id/activity_effect_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_red_dark"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/activity_effect_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/holo_red_dark"
            android:lineSpacingMultiplier="1.3"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/activity_effect_coll_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/activity_effect_content_tv"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|bottom"
            android:src="@mipmap/display_all" />
    </RelativeLayout>


</LinearLayout>
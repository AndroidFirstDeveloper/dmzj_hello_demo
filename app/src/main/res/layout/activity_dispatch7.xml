<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dispatch.DispatchActivity6">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_dispatch6_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary" />

    <com.example.myapplication.dispatch.ViewGroup1
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/holo_red_dark">

        <com.example.myapplication.dispatch.ViewGroup2
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@android:color/holo_green_dark"
            android:orientation="vertical">

            <com.example.myapplication.dispatch.View1
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:background="@android:color/holo_blue_dark" />
        </com.example.myapplication.dispatch.ViewGroup2>
    </com.example.myapplication.dispatch.ViewGroup1>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/dispatch_conclusion"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />
    </ScrollView>
</LinearLayout>
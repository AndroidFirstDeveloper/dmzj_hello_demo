<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".album.AlbumActivity">

    <include
        android:id="@+id/activity_picture_toolbar"
        layout="@layout/navigation_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/activity_album_btn1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="12dp"
                android:text="Intent.ACTION_PICK"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/activity_album_btn2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="12dp"
                android:text="Intent.ACTION_GET_CONTENT"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/activity_album_btn3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="12dp"
                android:text="Intent.ACTION_OPEN_DOCUMENT"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/activity_album_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:lineSpacingMultiplier="1.3"
                android:textColor="#333333"
                android:textSize="15sp" />


            <Button
                android:id="@+id/activity_album_three_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:text="三方图片选择库"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".activity.FragmentLifeCycleActivity">

    <include
        android:id="@+id/activity_fragment_life_cycle_toolbar"
        layout="@layout/navigation_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_fragment_life_cycle_btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Fragment1"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/activity_fragment_life_cycle_btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Fragment2"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_fragment_life_cycle_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>